<h1>Log In</h1>
  <%=form_tag log_in_path do |f|%>
  <div class="form-group">
    <%=label_tag :username %>
    <%=text_field_tag :username, nil, {:class => "form-control"} %>
  </div>
  <div class="form-group">
    <%=label_tag :password %>
    <%=password_field_tag :password, nil, {:class => "form-control"} %>
  </div>
  <%=submit_tag "Log in", {:class => "btn btn-info"} %>
<%end%>
