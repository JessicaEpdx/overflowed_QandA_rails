<!DOCTYPE html>
<html>
<head>
  <title>Overflowed</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div id="name">
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to "Overflowed", "/", class: "navbar-brand"  %>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav navbar-left special-color">
            <% if current_user %>
              <li><%=link_to 'Questions', user_questions_path(current_user)%></li>
              <li><%=link_to 'Ask Away', new_user_question_path(current_user)%></li>
            <% end %>
          </ul>
          <ul class="nav navbar-nav navbar-right special-color">
            <li class="dropdown">
              <% if current_user %>
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                  <%= current_user.username %> <span class="caret"></span>
                </a>
              <% else %>
                  <%= link_to "Log In", log_in_path %>
                </a>
              <% end %>

              <ul class="dropdown-menu">
                <% if current_user %>
                  <li><%= link_to "View Profile", user_path(current_user) %></li>
                  <% if current_user.admin %>
                    <li><%= link_to "Manage Accounts", users_path %></li>
                  <% end %>
                  <li><%= link_to "Log Out", log_out_path %></li>
                <% end %>
              </ul>
            </li>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>
  <div class="container">
    <%= flash[:alert] %>
    <%= flash[:notice] %>
    <%= yield %>
  </div>



</body>
</html>
