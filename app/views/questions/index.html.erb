<div class="col-sm-3">
  <ul class="list-unstyled">
    <% @categories.each do |category| %>
      <li><%= link_to category.name, category_path(category), remote: true %></li>
    <% end %>
  </ul>
</div>



<div class="col-sm-9">

  <div class="edit-question">
  </div>

  <% if @results.any? %>
    <h3>Search Results</h3>
    <ul class= "list-unstyled">
      <% @results.each do |result| %>
        <li class="question"><%= link_to result.title, question_path(result) %></li>
      <% end %>
    </ul>
  <% else %>
    <div class="questions">
      <%= render 'questions' %>
    </div>
  <% end %>

</div>
