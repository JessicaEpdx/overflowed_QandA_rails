<% if @results.any? %>
<h3>Search Results</h3>
<ul class= "list-unstyled">
  <% @results.each do |result| %>
    <li class="question"><%= link_to result.title, question_path(result) %></li>
  <% end %>
</ul>
<% else %>
  <% if @all_questions.any? %>
  <ul class="list-unstyled">
    <% @all_questions.each do |question| %>
    <li class="question">
      <%= link_to question.title, question_path(question) %>
      <% if current_user.admin %>
      <%= link_to image_tag("trashcan.png"), question_path(question), :class => 'delete',
      :data => {:confirm => "Really really?",
        :method => "delete"} %>
        <% end %>
      </li>
      <% end %>
    </ul>
    <% else %>
    <h5>You have not asked any questions yet! Don't be shy.</h5>
    <% end %>
<% end %>
