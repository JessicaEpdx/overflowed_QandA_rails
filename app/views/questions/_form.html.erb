<%=form_for [current_user, @question] do |f|%>
<div class="form-group">
  <div class="form-group">
    <%=f.label :title %>
    <%=f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%=f.label :description %>
    <%=f.text_field :description, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= select("question", "category_id", Category.all.collect {|p| [ p.name, p.id ] }, {include_blank: 'None'}) %>
  </div>
  <%=f.submit 'Ask Question', :class => "btn btn-info" %>
<%end%>
